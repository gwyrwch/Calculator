<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DigitButton">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/digitBtnColor</item>
        <item name="android:width">@dimen/btn_width</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OperationButton">
        <item name="android:background">@color/operationBtnColor</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:width">@dimen/btn_width</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/btnColor</item>
        <item name="android:width">@dimen/btn_width</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">15dp</item>
    </style>

    <style name="ButtonLand" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/btnColor</item>
        <item name="android:width">@dimen/btn_land_width</item>
        <item name="android:height">@dimen/btn_land_height</item>
        <item name="android:capitalize">none</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DigitButtonLand" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/digitBtnColor</item>
        <item name="android:width">@dimen/btn_land_width</item>
        <item name="android:height">@dimen/btn_land_height</item>
        <item name="android:capitalize">none</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OperationButtonLand" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/operationBtnColor</item>
        <item name="android:width">@dimen/btn_land_width</item>
        <item name="android:height">@dimen/btn_land_height</item>
        <item name="android:capitalize">none</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
